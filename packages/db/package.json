{
  "name": "@puckhub/db",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./services": "./src/services/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "lint": "biome check . && tsc --noEmit",
    "format": "biome format --write .",
    "db:generate": "prisma generate",
    "db:migrate": "prisma db push",
    "db:migrate:prod": "prisma migrate deploy",
    "db:migrate:create": "prisma migrate dev",
    "db:seed": "tsx src/seed/run.ts",
    "db:init-demo": "tsx src/seed/demo.ts",
    "db:reset": "tsx src/seed/reset.ts",
    "db:studio": "prisma studio"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "better-auth": "^1.4.18",
    "dotenv": "^16.5.0",
    "sharp": "^0.34.5",
    "tsx": "^4.19.0",
    "typescript": "^5.8.0"
  },
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "prisma": "^6.19.2"
  }
}
