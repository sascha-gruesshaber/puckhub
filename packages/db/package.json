{
  "name": "@puckhub/db",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts",
    "./services": "./src/services/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "lint": "biome check . && tsc --noEmit",
    "format": "biome format --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit push",
    "db:migrate:prod": "drizzle-kit migrate",
    "db:seed": "tsx src/seed/run.ts",
    "db:init-demo": "tsx src/seed/demo.ts",
    "db:reset": "tsx src/seed/reset.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.0",
    "postgres": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "better-auth": "^1.2.0",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.30.0",
    "sharp": "^0.34.5",
    "tsx": "^4.19.0",
    "typescript": "^5.8.0"
  }
}
